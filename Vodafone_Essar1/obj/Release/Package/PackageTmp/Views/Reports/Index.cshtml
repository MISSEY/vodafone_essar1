<script type="text/javascript">
    function BindTable(Log_Lists) {
        $.ajax({

            type: "POST",
            dataType: "json",

            url: '@Url.Action("GetReports", "Reports")',
            data: {
                from: document.getElementById('from').value,
                to: document.getElementById('to').value,
                Type: Log_Lists
            },

            success: function (data1) {
                Bind(data1);
                document.getElementById("divLoading").style.display = "none";
            }
        });
    }

    function Bind(data1) {
        debugger;
        $('#Employeetable').dataTable().fnDestroy();
        var datatableVariable = $('#Employeetable').DataTable({
            data: data1,

            "sScrollX": true,
            "sScrollY": 400,
            "bScrollCollapse": true,
            dom: 'Bfrtip',
            buttons: [
               'excel', 'print'
            ],
            columns: [
                {
                    data: 'Date'
                },

                { 'data': 'Employees_Name' },
                { 'data': 'SAP_ID' },
                { 'data': 'Levels' },
                { 'data': 'Mobile_no' },
                {
                    'data': 'Sim_no',
                },
                 { 'data': 'Department' },
                { 'data': 'Reason' },

            ]
        });
    }


    $(document).ready(function () {

        var Title = '@Title';
        var Log_Lists = '';
        var Month, sim_no;
        document.getElementById('from').value = moment().format('YYYY/MM/DD');
        document.getElementById('to').value = moment().format('YYYY/MM/DD');
        document.getElementById("divLoading").style.display = "block";
        if (Title == 'New Sim Activation Lists') {
            Log_Lists = 'New_ACT';
        }
        else if (Title == 'Deactivation Lists') {
            Log_Lists = 'DACT';
        }
        else if (Title == 'Sim Replacement Lists') {
            Log_Lists = 'Sim_Replace';
         }
        else if (Title == 'Reactivation number Lists') {
            Log_Lists = 'React';
        }
        else if (Title == 'Plan Change Lists') {
            Log_Lists = 'Plan_Change';
        }
        else {
        }
        BindTable(Log_Lists);

        var dateFormat = "yy/mm/dd",
              from = $("#from")
                .datepicker({
                    defaultDate: "+1w",
                    changeMonth: true,
                    changeYear: true,
                    dateFormat: "yy/mm/dd",
                    numberOfMonths: 1
                })
                .on("change", function () {
                    to.datepicker("option", "minDate", getDate(this));
                }),
              to = $("#to").datepicker({
                  defaultDate: "+1w",
                  changeMonth: true,
                  dateFormat: "yy/mm/dd",
                  changeYear: true,
                  numberOfMonths: 1
              })
              .on("change", function () {
                  from.datepicker("option", "maxDate", getDate(this));
              });

        function getDate(element) {
            var date;
            try {
                date = $.datepicker.parseDate(dateFormat, element.value);
            } catch (error) {
                date = null;
            }

            return date;
        }




        $("#MonthYear").click(function () {
            document.getElementById("divLoading").style.display = "block";
            BindTable(Log_Lists);

        });



    });

</script>
